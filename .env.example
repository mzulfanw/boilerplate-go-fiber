# Copy to .env and adjust for your environment.
APP_NAME=boilerplate-go-fiber
APP_ENV=local
LOG_LEVEL=info
HTTP_ADDR=:3000
HTTP_READ_TIMEOUT=10s
HTTP_WRITE_TIMEOUT=10s
HTTP_IDLE_TIMEOUT=10s
SHUTDOWN_TIMEOUT=5s
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,HEAD,PUT,DELETE,PATCH
CORS_ALLOW_HEADERS=
CORS_EXPOSE_HEADERS=
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=0
REDIS_ADDR=localhost:6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_POOL_SIZE=0
REDIS_MIN_IDLE_CONNS=0
REDIS_DEFAULT_TTL=0s
REDIS_TLS_ENABLED=false
REDIS_TLS_INSECURE_SKIP_VERIFY=false
POSTGRES_DSN=
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_SSLMODE=disable
POSTGRES_CONNECT_TIMEOUT=5s
POSTGRES_MAX_CONNS=10
POSTGRES_MIN_CONNS=0
POSTGRES_MAX_CONN_LIFETIME=0s
POSTGRES_MAX_CONN_IDLE_TIME=0s
POSTGRES_HEALTHCHECK_PERIOD=1m
JWT_SECRET=dev-secret-change-me
JWT_ISSUER=boilerplate-go-fiber
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=168h
REFRESH_TOKEN_CLEANUP_INTERVAL=1h
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=15m
AUTH_LOGIN_RATE_LIMIT=10
AUTH_LOGIN_RATE_WINDOW=1m
# Swagger UI
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs
# Observability (Jaeger via otel-collector in docker-compose)
# Set OTEL_ENABLED=true to export traces to localhost:4317.
METRICS_ENABLED=true
METRICS_PATH=/metrics
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_SAMPLE_RATIO=1
